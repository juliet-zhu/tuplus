
.header
    height 60px
    padding 10px 15px 0 15px
    background #000
.content-top
    padding-bottom 40px
.banner-img-640
    display none
.download-box
    float right
    width 260px
    height 410px
    margin-top 50px
    padding 25px 50px
    background #f7f6f6
    border 1px solid #c8c8c8
    text-align center
    img
        display block
        margin 0 auto
    .logo-big
        margin-bottom 30px
    .andriod-download
        display block
        margin-bottom 20px
.content-btm
    padding 0 15% 20px
    border-top 1px solid #ccc
    background #f9f9f9 url(../images/bg.png) left top
    h3
        margin 50px auto 20px
        text-align center
    p 
        font-size 18px
    .app,.feature
        width 80%
        margin 0 auto
        text-align center
        p 
            color #666
            line-height 1.4166em
        .th,.con
            margin-top 25px
.download-box-mobile
    display none
.footer
    height 60px
    padding 15px
    background #000
    color #fff
    text-align center

/* media query */
@media(max-width:992px)
    .download-box
        float inherit
    .banner-img
        display block
        max-width 100%
        height auto
    .download-box
        display none
    .download-box-mobile
        display block
        width 220px
        height 410px
        margin 50px auto 0
        text-align center
        img
            display block
            margin 0 auto
        .logo-big
            margin-bottom 30px
        .andriod-download
            display block
            margin-bottom 20px
    .content-btm
        padding 0 10% 20px
@media(max-width:640px)
    .content-top
        padding-bottom 10px
    .banner-img
        display none
    .banner-img-640
        display block
        max-width 100%
        height auto
    .download-box-mobile
        width 100%
        border-bottom 1px solid #ccc
    .content-btm
        padding 0 10% 20px
        .app,.feature
            width 100%



               
